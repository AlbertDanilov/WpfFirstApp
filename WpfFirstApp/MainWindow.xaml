<Window x:Class="WpfFirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFirstApp.Models" 
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid x:Name="mainGrid" ShowGridLines="True">
        <StackPanel>
            <GroupBox Padding="5">
                <GroupBox.Header>
                    <Button Background="Lavender">Выбрать блюдо</Button>
                </GroupBox.Header>
                <StackPanel>
                    <RadioButton IsChecked="True" Margin="3">Салат Оливье</RadioButton>
                    <RadioButton Margin="3">Котлеты по-киевски</RadioButton>
                    <RadioButton Margin="3">Селедка под шубой</RadioButton>
                </StackPanel>
            </GroupBox>
        </StackPanel>        
    </Grid>
</Window>
